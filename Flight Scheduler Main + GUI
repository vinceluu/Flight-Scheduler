    private void waitlistStatusActionPerformed(java.awt.event.ActionEvent evt) {                                               
        //calls WaitlistStatus when waitlist button is pressed
        clearArea(2);
        for (String s : Flight.getFlights()) {
            Waitlist.WaitlistStatus(s, Date.valueOf(listStatusDates.getSelectedItem().toString()));
        }
    }                                              

    private void flightStatusActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        //calls flight status after status is pressed
        clearArea(2);
        Booking.FlightStatus((String) listStatusFlights.getSelectedItem(), Date.valueOf(listStatusDates.getSelectedItem().toString()));
    }                                            

    private void bookCompleteButtonActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        // TODO add your handling code here:
        //calls booking after complete button is pressed
        clearArea(1);
        Booking.Booking(nameText.getText(), (String) listOfFlights.getSelectedItem(), Date.valueOf(listOfDates.getSelectedItem().toString()));
        updateComboBoxes();
    }                                                  

    private void customerStatusActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        clearArea(2);
        ArrayList<String> bookedStatus = Customer.customerBookedStatus((String) listStatusNames.getSelectedItem().toString());
        ArrayList<String> waitlistStatus= Customer.customerWaitlistStatus((String) listStatusNames.getSelectedItem().toString());

        displayStatus((String) listStatusNames.getSelectedItem().toString() + " Status: \n");
        displayStatus("     Booked: \n");
        for (int i = 0; i < bookedStatus.size() - 1; i = i + 2) {
            displayStatus("        " + bookedStatus.get(i) + " on " + bookedStatus.get(i + 1) + "\n");
        }
        displayStatus("     Waiting: \n");
        for (int i = 0; i < waitlistStatus.size() - 1; i = i + 2) {
            displayStatus("        " + waitlistStatus.get(i) + " on " + waitlistStatus.get(i + 1) + "\n");
        }
    }                                              

    private void addFlightActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        clearArea(4);
        Flight.addFlight(addFlightText.getText(), Integer.parseInt(addSeatsText.getText()));
        displayAdd("Flight Added");
        updateComboBoxes();
    }                                         

    private void addDateActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        clearArea(4);
        Dates.addDate(Date.valueOf(addDateText.getText()));
        displayAdd("Date Added");
        updateComboBoxes();
    }                                       

    private void dropCustomerActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        clearArea(3);
        int counter;
        //counter to tell whether you were booked, waitlisted, or neither 
        counter = Customer.dropCustomer((String) listDropNames.getSelectedItem(), Date.valueOf(listDropDates.getSelectedItem().toString()));

        switch (counter) {
            //removed from booking
            case -1:
                displayDrop((String) listDropNames.getSelectedItem().toString() + " status on " + Date.valueOf(listDropDates.getSelectedItem().toString()) + "\n");
                displayDrop("       Dropped from booked flight ");

                break;
            //removed from neither
            case 0:
                displayDrop((String) listDropNames.getSelectedItem().toString() + " status on " + Date.valueOf(listDropDates.getSelectedItem().toString()) + "\n");
                displayDrop("       Not waitlisted or booked on this day ");

                break;
            // removed from waitlist
            case 1:
                displayDrop((String) listDropNames.getSelectedItem().toString() + " status on " + Date.valueOf(listDropDates.getSelectedItem().toString()) + "\n");
                displayDrop("       Dropped from waitlist for all flights ");

                break;

        }
        updateComboBoxes();
    }                                            

    private void dropFlightActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        clearArea(3);  
        Flight.dropFlight((String)listDropFlights.getSelectedItem());
        updateComboBoxes();
    }                                          

