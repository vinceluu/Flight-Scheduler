    public FlightScheduler() {
        initComponents();
        //the following fills the combo boxes for dates and flights in booking and status tabs
        listOfDates.setModel(new DefaultComboBoxModel(Dates.getDates().toArray()));
        listOfFlights.setModel(new DefaultComboBoxModel(Flight.getFlights().toArray()));
        listStatusDates.setModel(new DefaultComboBoxModel(Dates.getDates().toArray()));
        listStatusFlights.setModel(new DefaultComboBoxModel(Flight.getFlights().toArray()));
        listStatusNames.setModel(new javax.swing.DefaultComboBoxModel(Customer.getCustomers().toArray()));
        listDropNames.setModel(new javax.swing.DefaultComboBoxModel(Customer.getCustomers().toArray()));
        listDropFlights.setModel(new javax.swing.DefaultComboBoxModel(Flight.getFlights().toArray()));
        listDropDates.setModel(new javax.swing.DefaultComboBoxModel(Dates.getDates().toArray()));
    }

    public void updateComboBoxes() {

        listOfFlights.setModel(new javax.swing.DefaultComboBoxModel(Flight.getFlights().toArray()));
        listOfDates.setModel(new javax.swing.DefaultComboBoxModel(Dates.getDates().toArray()));
        listStatusFlights.setModel(new javax.swing.DefaultComboBoxModel(Flight.getFlights().toArray()));
        listStatusDates.setModel(new javax.swing.DefaultComboBoxModel(Dates.getDates().toArray()));
        listStatusNames.setModel(new javax.swing.DefaultComboBoxModel(Customer.getCustomers().toArray()));
        listDropNames.setModel(new javax.swing.DefaultComboBoxModel(Customer.getCustomers().toArray()));
        listDropFlights.setModel(new javax.swing.DefaultComboBoxModel(Flight.getFlights().toArray()));
        listDropDates.setModel(new javax.swing.DefaultComboBoxModel(Dates.getDates().toArray()));
    }

    public static void clearArea(int i) {
        //used to clear text area after clicking new buttons
        if (i == 1) {
            BookingTextArea.setText("");
        } else if (i == 2) {
            statusTextArea.setText("");
        } else if (i == 3) {
            dropTextArea.setText("");
        } else if (i == 4) {
            addTextArea.setText("");
        }
    }

