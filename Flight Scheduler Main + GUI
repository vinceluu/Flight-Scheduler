    public static void displayBooking(String text) {
        //puts text into text area in booking tab
        BookingTextArea.append(text);
    }

    static void displayStatus(String myText) {
        //puts texts into text area in status tab
        statusTextArea.append(myText);
    }

    static void displayDrop(String text) {
        dropTextArea.append(text);
    }

    static void displayAdd(String text) {
        addTextArea.append(text);
    }

